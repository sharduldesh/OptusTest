<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentUser"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/fragmentUser"
        android:name="com.techm.optustest.ui.userinfo.FragmentUser"
        android:label="FragmentUser"
        tools:layout="@layout/fragment_user">
        <action
            android:id="@+id/action_fragmentUser_to_fragmentAlbum"
            app:destination="@id/fragmentAlbum"
             />
    </fragment>

    <fragment
        android:id="@+id/fragmentAlbum"
        android:name="com.techm.optustest.ui.album.FragmentAlbum"
        android:label="FragmentAlbum"
        tools:layout="@layout/fragment_album">
        <action
            android:id="@+id/action_fragmentAlbum_to_fragmentPhoto"
            app:destination="@id/fragmentPhoto"
           />
    </fragment>

    <fragment
        android:id="@+id/fragmentPhoto"
        android:name="com.techm.optustest.ui.photo.FragmentPhoto"
        android:label="FragmentAlbumDetails"
        tools:layout="@layout/fragment_album_details"/>
</navigation>


